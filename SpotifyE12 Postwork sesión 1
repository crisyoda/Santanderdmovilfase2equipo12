 fun main(){
     var genero: Int
     val listaRock = """ 
      1- TrackRock 1
      2- TrackRock 2
      3- TrackRock 3
   """
     val listaJazz = """
      1- TrackJazz 1
      2- TrackJazz 2
      3- TrackJazz 3
     """
     var opcionRep: Int
 
     print("selecciona un genero, 1= Rock, 2= Jazz")
     genero = readLine()?.toInt() as Int
 
     if (genero == 1) {
        println("Seleccionaste el genero de ROCK, se reproducirá la siguiente lista de canciones $listaRock")

        println("1-Pausa 2- Reproducir 3-Repetir canción 4-Avanzar canción")
        opcionRep = readLine()?.toInt() as Int
        when (opcionRep) {
            1 -> println("Pausando canción...")
            2 -> println("Reproduciendo canción...")
            3 -> println("Repitiendo tu canción...")
            4 -> println("Siguiente canción...")
            else -> println("Comando NO válido")
        }}
        else { println("Género NO válido") }

    if (genero == 2) {
        println("Seleccionaste el genero de ROCK, se reproducirá la siguiente lista de canciones $listaJazz")

        println("1-Pausa 2- Reproducir 3-Repetir canción 4-Avanzar canción")
        opcionRep = readLine()?.toInt() as Int
        when (opcionRep) {
            1 -> println("Pausando canción...")
            2 -> println("Reproduciendo canción...")
            3 -> println("Repitiendo tu canción...")
            4 -> println("Siguiente canción...")
            else -> println("Comando NO válido")
            }
        }
    }
